{# templates/form/simple_form.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
#map {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1; /* Mapa będzie za innymi elementami */
}

/* Zawartość wyświetlana nad mapą */
.content-overlay {
    position: relative;
    color: white;
    text-align: center;
    padding-top: 20vh; 
    z-index: 1;
    background: rgba(0, 0, 0, 0.5); 
    padding: 20px;
    border-radius: 10px;
    width: 50%;
    margin: auto;
}

#result {
	position: absolute;
    top: 10%;
    left: 5%;
    border: 1px solid black;
    background: azure;
    z-index: 999999999;
	
}
</style>

{% endblock %}

{% block title %}
	Strona główna
{% endblock %}

{% block body %}

<div id="map"></div>

	<div class="p-3">
		<label for="inputCity" class="form-label">Wpisz nazwę miasta:</label>
		<input type="text" class="form-control" id="inputCity" name="city"
			   hx-post="{{ path('app_dev_searchCity') }}" 
			   hx-trigger="keyup changed delay:500ms" 
			   hx-target="#result" 
			   hx-swap="innerHTML" 
			   autocomplete="on">
	</div>

	<div id="result">
	
	</div>
{% endblock %}

